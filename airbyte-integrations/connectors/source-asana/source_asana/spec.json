{
  "documentationUrl": "https://docs.airbyte.io/integrations/sources/asana",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Asana Spec",
    "type": "object",
    "additionalProperties": true,
    "properties": {
      "credentials": {
        "title": "Authentication Mechanism",
        "description": "Choose how to authenticate to Github",
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "title": "Authenticate with Personal Access Token",
            "required": ["personal_access_token"],
            "properties": {
              "option_title": {
                "type": "string",
                "title": "Credentials Title",
                "description": "PAT Credentials",
                "const": "PAT Credentials"
              },
              "personal_access_token": {
                "type": "string",
                "title": "Personal Access Token",
                "description": "Asana Personal Access Token. See the <a href=\"https://docs.airbyte.io/integrations/sources/asana\">docs</a> for more information on how to obtain this token.",
                "airbyte_secret": true
              }
            }
          },
          {
            "type": "object",
            "title": "Authenticate via Asana (Oauth)",
            "required": ["client_id", "client_secret", "refresh_token"],
            "properties": {
              "option_title": {
                "type": "string",
                "title": "Credentials Title",
                "description": "OAuth Credentials",
                "const": "OAuth Credentials"
              },
              "client_id": {
                "type": "string",
                "title": "Client ID",
                "description": "The username of your Asana developer application.",
                "airbyte_secret": true
              },
              "client_secret": {
                "type": "string",
                "title": "Client Secret",
                "description": "The password of your Asana developer application.",
                "airbyte_secret": true
              },
              "refresh_token": {
                "type": "string",
                "title": "Refresh Token",
                "description": "Asana Refresh Token which can be used to fetch new Bearer Tokens when the current one expires.",
                "airbyte_secret": true
              }
            }
          }
        ]
      }
    }
  },
  "authSpecification": {
    "auth_type": "oauth2.0",
    "oauth2Specification": {
      "rootObject": ["credentials", 1],
      "oauthFlowInitParameters": [["client_id"], ["client_secret"]],
      "oauthFlowOutputParameters": [["refresh_token"]]
    }
  }
}
