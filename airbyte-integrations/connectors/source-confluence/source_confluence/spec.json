{
  "documentationUrl": "https://docs.airbyte.io/integrations/sources/confluence",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Confluence Spec",
    "type": "object",
    "required": ["api_token", "domain_name", "email"],
    "additionalProperties": false,
    "properties": {
      "api_token": {
        "type": "string",
        "title": "API Token",
        "description": "Confluence API Token. See the <a href=\"https://docs.airbyte.io/integrations/sources/confluence\">docs</a> for more information on how to obtain this token.",
        "airbyte_secret": true
      },
      "domain_name": {
        "type": "string",
        "title": "Domain Name",
        "description": "The name of your Confluence domain.",
        "examples": ["example.atlassian.net"]
      },
      "email": {
        "type": "string",
        "title": "Email",
        "description": "Confluence login email.",
        "examples": ["abc@example.com"]
      }
    }
  }
}
