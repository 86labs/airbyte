{
  "documentationUrl": "https://docs.airbyte.io/integrations/destinations/scylla",
  "supportsIncremental": true,
  "supportsNormalization": false,
  "supportsDBT": false,
  "supported_destination_sync_modes": ["overwrite", "append"],
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Scylla Destination Spec",
    "type": "object",
    "required": ["keyspace", "username", "password", "address", "port"],
    "additionalProperties": true,
    "properties": {
      "keyspace": {
        "title": "Keyspace",
        "description": "The default keyspace to use when writing data.",
        "type": "string",
        "order": 0
      },
      "username": {
        "title": "Username",
        "description": "The username which is used to access the database.",
        "type": "string",
        "order": 1
      },
      "password": {
        "title": "Password",
        "description": "The password associated with this username.",
        "type": "string",
        "airbyte_secret": true,
        "order": 2
      },
      "address": {
        "title": "Address",
        "description": "The cluster address.",
        "type": "string",
        "order": 3
      },
      "port": {
        "title": "Port",
        "description": "The port of the database.",
        "type": "integer",
        "minimum": 0,
        "maximum": 65536,
        "default": 9042,
        "order": 4
      },
      "replication": {
        "title": "Replication Factor",
        "type": "integer",
        "description": "Indicates to how many nodes the data should be replicated to.",
        "default": 1,
        "order": 5
      }
    }
  }
}
