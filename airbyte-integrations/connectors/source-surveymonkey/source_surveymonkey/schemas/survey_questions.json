{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "page_id": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "position": {
      "type": "integer"
    },
    "visible": {
      "type": "boolean"
    },
    "family": {
      "type": "string"
    },
    "subtype": {
      "type": "string"
    },
    "layout": {
      "type": ["object", "null"]
    },
    "sorting": {
      "type": ["object", "null"],
      "properties": {
        "ignore_last": {
          "type": "boolean"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "required": {
      "type": ["object", "null"],
      "properties": {
        "amount": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "validation": {
      "type": ["object", "null"],
      "properties": {
        "max": {
          "type": ["integer", "null"]
        },
        "min": {
          "type": ["integer", "null"]
        },
        "sum": {
          "type": ["integer", "null"]
        },
        "sum_text": {
          "type": ["string", "null"]
        },
        "text": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "forced_ranking": {
      "type": "boolean"
    },
    "headings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "heading": {
            "type": "string"
          }
        }
      }
    },
    "href": {
      "type": "string"
    },
    "answers": {
      "type": "object",
      "properties": {
        "choices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "position": {
                "type": "integer"
              },
              "visible": {
                "type": "boolean"
              },
              "text": {
                "type": "string"
              },
              "quiz_options": {
                "type": "object",
                "properties": {
                  "score": {
                    "type": "integer"
                  }
                }
              },
              "id": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
